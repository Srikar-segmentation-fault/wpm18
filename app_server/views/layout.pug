doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title || 'RentEase'
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    header.site-header
      .container.navbar
        a.brand(href="/") RentEase
        nav.links
          a(href="/about" class=(active==='about' ? 'active' : '')) About
          // ðŸ‘‡ route Listings based on auth status
          a(href=(user ? '/properties' : '/auth/login') class=(active==='list' ? 'active' : '')) Listings
        .auth
          if user
            span.hello Hello, #{user.name}
            if user.role === 'owner'
              a.btn.btn-ghost(href="/dashboard") Dashboard
            a.btn.btn-ghost(href="/profile") Profile
            form(action="/auth/logout", method="post")
              button.btn.btn-danger(type="submit") Logout
          else
            a.btn.btn-ghost(href="/auth/login") Login
            a.btn.btn-primary(href="/auth/register") Sign up

    main.container.page
      block content

